{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "$lib": ["./src/lib"],
        "$lib/*": ["./src/lib/*"]
      },
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true
    },
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte", "src/pages/sidepanel/index.ts"],
    "references": [{ "path": "./tsconfig.node.json" }],
}
